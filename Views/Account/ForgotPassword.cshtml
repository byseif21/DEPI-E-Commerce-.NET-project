@model Styleza.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="account-form-container">
                    <h2 class="text-center mb-4">Forgot your password?</h2>
                    <p class="text-center mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                    <form id="forgot-password-form" method="post" asp-controller="Account" asp-action="ForgotPassword">
                        <div class="form-group mb-3">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <button id="forgot-password-submit" type="submit" class="w-100 btn btn-primary">Submit</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <p>
                                <a asp-controller="Account" asp-action="Login">Return to login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>