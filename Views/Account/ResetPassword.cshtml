@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="account-form-container">
                    <h2 class="text-center mb-4">Reset your password</h2>
                    <form id="reset-password-form" method="post" asp-controller="Account" asp-action="ResetPassword">
                        <input type="hidden" name="Input.Code" value="@ViewData["Code"]" />
                        <input type="hidden" name="Input.Email" value="@ViewData["Email"]" />
                        <div class="form-group mb-3">
                            <label for="Input_Password">New Password</label>
                            <input id="Input_Password" name="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Input_ConfirmPassword">Confirm Password</label>
                            <input id="Input_ConfirmPassword" name="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                        </div>
                        <div class="form-group mb-3">
                            <button id="reset-password-submit" type="submit" class="w-100 btn btn-primary">Reset Password</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <p>
                                <a asp-controller="Account" asp-action="Login">Return to login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>