@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="account-form-container">
                    <h2 class="text-center mb-4">Create Account</h2>
                    <form id="registerForm" method="post" asp-area="Identity" asp-page="/Account/Register">
                        <div class="form-group mb-3">
                            <label for="Input_Email">Email</label>
                            <input id="Input_Email" name="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Input_Password">Password</label>
                            <input id="Input_Password" name="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Input_ConfirmPassword">Confirm Password</label>
                            <input id="Input_ConfirmPassword" name="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                        </div>
                        <div class="form-group mb-3">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <p>
                                <a asp-controller="Account" asp-action="Login">Already have an account? Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>