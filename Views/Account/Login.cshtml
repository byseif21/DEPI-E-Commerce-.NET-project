@model Styleza.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="account-form-container">
                    <h2 class="text-center mb-4">Welcome Back</h2>
                    <form id="account" method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" type="checkbox" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <p>
                                <a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>