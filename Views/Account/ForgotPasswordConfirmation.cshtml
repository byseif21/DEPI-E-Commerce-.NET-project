@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="account-form-container">
                    <h2 class="text-center mb-4">Password Reset Email Sent</h2>
                    <p class="text-center mb-4">
                        Please check your email to reset your password.
                    </p>
                    @if (ViewData["ResetLink"] != null)
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">In a production environment, an email would be sent. For testing purposes, you can use this link:</p>
                            <a href="@ViewData["ResetLink"]">Reset Password</a>
                        </div>
                    }
                    <div class="form-group mb-3 text-center">
                        <p>
                            <a asp-controller="Account" asp-action="Login">Return to login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>