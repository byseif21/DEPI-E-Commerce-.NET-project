@model List<Styleza.Models.Category>
@{
    ViewData["Title"] = "Category Management";
}

<div class="container mt-4">
    <h1 class="mb-4">Category Management</h1>
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        <a asp-action="CreateCategory" class="btn btn-success">Add New Category</a>
    </div>
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Categories</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Sub-Categories</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>
                                    @if (category.SubCategories != null && category.SubCategories.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var subCategory in category.SubCategories)
                                            {
                                                <li>@subCategory.Name</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No sub-categories</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <form asp-action="DeleteCategory" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@category.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category? This will also delete all associated products.');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>