@model List<Styleza.Models.Product>
@{
    ViewData["Title"] = "Product Management";
}

<div class="container admin-dashboard">
    <h1>Product Management</h1>
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Index" class="admin-btn admin-btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
        <a asp-action="CreateProduct" class="admin-btn admin-btn-success"><i class="fas fa-plus me-2"></i>Add New Product</a>
    </div>
    
    <div class="admin-table-container">
        <div class="admin-card-header">
            <i class="fas fa-tshirt me-2"></i> Products
        </div>
        <div class="admin-card-body">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" />
                                </td>
                                <td>@product.Name</td>
                                <td>$@product.Price.ToString("F2")</td>
                                <td>@(product.Category?.Name ?? "Uncategorized")</td>
                                <td>@product.StockQuantity</td>
                                <td>
                                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="admin-btn admin-btn-primary admin-btn-sm"><i class="fas fa-edit me-1"></i>Edit</a>
                                    <form asp-action="DeleteProduct" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit" class="admin-btn admin-btn-danger admin-btn-sm" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fas fa-trash-alt me-1"></i>Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>