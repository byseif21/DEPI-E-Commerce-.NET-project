@model Styleza.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="container admin-dashboard">
    <h1>Create New Product</h1>
    <a asp-action="ProductManagement" class="admin-btn admin-btn-secondary admin-mb-3"><i class="fas fa-arrow-left me-2"></i>Back to Products</a>
    
    <div class="admin-table-container">
        <div class="admin-card-header">
            <i class="fas fa-tshirt me-2"></i>Product Details
        </div>
        <div class="admin-card-body">
            <form asp-action="CreateProduct" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="admin-row">
                    <div class="admin-col-6">
                        <div class="admin-form-group">
                            <label asp-for="Name" class="admin-form-label">Product Name</label>
                            <input asp-for="Name" class="admin-form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Description" class="admin-form-label">Description</label>
                            <textarea asp-for="Description" class="admin-form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Price" class="admin-form-label">Price</label>
                            <input asp-for="Price" class="admin-form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="OldPrice" class="admin-form-label">Old Price (Optional)</label>
                            <input asp-for="OldPrice" class="admin-form-control" type="number" step="0.01" />
                            <span asp-validation-for="OldPrice" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Color" class="admin-form-label">Color</label>
                            <select asp-for="Color" class="admin-form-select">
                                <option value="">-- Select Color --</option>
                                <option value="#000000">Black</option>
                                <option value="#FFFFFF">White</option>
                                <option value="#FF5733">Orange</option>
                                <option value="#45B8AC">Teal</option>
                                <option value="#9B59B6">Purple</option>
                                <option value="#5D9CEC">Blue</option>
                                <option value="#F5D76E">Yellow</option>
                                <option value="#D98880">Pink</option>
                            </select>
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="admin-col-6">
                        <div class="admin-form-group">
                            <label asp-for="CategoryId" class="admin-form-label">Category</label>
                            <select asp-for="CategoryId" class="admin-form-select">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="ImageUrl" class="admin-form-label">Image URL</label>
                            <input asp-for="ImageUrl" class="admin-form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Tags" class="admin-form-label">Tags</label>
                            <input asp-for="Tags" class="admin-form-control" placeholder="Separate tags with commas" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="StockQuantity" class="admin-form-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" class="admin-form-control" type="number" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <div class="form-check">
                                <input asp-for="IsInStock" class="form-check-input" type="checkbox" />
                                <label asp-for="IsInStock" class="form-check-label">In Stock</label>
                            </div>
                        </div>
                        
                        <div class="admin-form-group">
                            <div class="form-check">
                                <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                                <label asp-for="IsNew" class="form-check-label">New Product</label>
                            </div>
                        </div>
                        
                        <div class="admin-form-group">
                            <div class="form-check">
                                <input asp-for="IsOnSale" class="form-check-input" type="checkbox" />
                                <label asp-for="IsOnSale" class="form-check-label">On Sale</label>
                            </div>
                        </div>
                        
                        <div class="admin-form-group">
                            <div class="form-check">
                                <input asp-for="IsBestSeller" class="form-check-input" type="checkbox" />
                                <label asp-for="IsBestSeller" class="form-check-label">Best Seller</label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="admin-text-center admin-mt-4">
                    <button type="submit" class="admin-btn admin-btn-success"><i class="fas fa-save me-2"></i>Create Product</button>
                    <a asp-action="ProductManagement" class="admin-btn admin-btn-secondary"><i class="fas fa-times me-2"></i>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}