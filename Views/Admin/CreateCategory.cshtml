@model Styleza.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="container admin-dashboard">
    <h1>Create New Category</h1>
    <a asp-action="CategoryManagement" class="admin-btn admin-btn-secondary admin-mb-3"><i class="fas fa-arrow-left me-2"></i>Back to Categories</a>
    
    <div class="admin-table-container">
        <div class="admin-card-header">
            <i class="fas fa-tag me-2"></i>Category Details
        </div>
        <div class="admin-card-body">
            <form asp-action="CreateCategory" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="admin-form-group">
                    <label asp-for="Name" class="admin-form-label">Category Name</label>
                    <input asp-for="Name" class="admin-form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="admin-form-group">
                    <label asp-for="Description" class="admin-form-label">Description</label>
                    <textarea asp-for="Description" class="admin-form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="admin-form-group">
                    <label asp-for="ImageUrl" class="admin-form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="admin-form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                
                <div class="admin-text-center admin-mt-3">
                    <button type="submit" class="admin-btn admin-btn-success"><i class="fas fa-save me-2"></i>Create Category</button>
                    <a asp-action="CategoryManagement" class="admin-btn admin-btn-secondary"><i class="fas fa-times me-2"></i>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}