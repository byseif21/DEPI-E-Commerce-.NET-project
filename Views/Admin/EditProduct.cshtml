@model Styleza.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container admin-dashboard">
    <h1>Edit Product</h1>
    <a asp-action="ProductManagement" class="admin-btn admin-btn-secondary admin-mb-3"><i class="fas fa-arrow-left me-2"></i>Back to Products</a>
    
    <div class="admin-table-container">
        <div class="admin-card-header">
            <i class="fas fa-edit me-2"></i>Product Details
        </div>
        <div class="admin-card-body">
            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <partial name="_ErrorMessagePartial" />
                
                <div class="admin-row">
                    <div class="admin-col-6">
                        <div class="admin-form-group">
                            <label asp-for="Name" class="admin-form-label">Product Name</label>
                            <input asp-for="Name" class="admin-form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Description" class="admin-form-label">Description</label>
                            <textarea asp-for="Description" class="admin-form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Price" class="admin-form-label">Price</label>
                            <input asp-for="Price" class="admin-form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="admin-col-6">
                        <div class="admin-form-group">
                            <label asp-for="CategoryId" class="admin-form-label">Category</label>
                            <select asp-for="CategoryId" class="admin-form-select">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label class="admin-form-label">Product Image</label>
                            <div class="mb-2">
                                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100px; max-height: 100px;" class="img-thumbnail" />
                            </div>
                            <input type="file" name="ProductImage" class="admin-form-control" accept="image/*" />
                            <small class="form-text text-muted">Upload a new image to replace the current one (JPG, PNG, or GIF). Maximum size: 5MB.</small>
                            <input asp-for="ImageUrl" type="hidden" value="@Model.ImageUrl" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="StockQuantity" class="admin-form-label">Stock Quantity</label>
                            <input asp-for="StockQuantity" class="admin-form-control" type="number" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="Color" class="admin-form-label">Color</label>
                            <select asp-for="Color" class="admin-form-select">
                                <option value="">-- Select Color --</option>
                                <option value="#000000">Black</option>
                                <option value="#FFFFFF">White</option>
                                <option value="#FF5733">Orange</option>
                                <option value="#45B8AC">Teal</option>
                                <option value="#9B59B6">Purple</option>
                                <option value="#5D9CEC">Blue</option>
                                <option value="#F5D76E">Yellow</option>
                                <option value="#D98880">Pink</option>
                            </select>
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="admin-text-center admin-mt-4">
                    <button type="submit" class="admin-btn admin-btn-success"><i class="fas fa-save me-2"></i>Save Changes</button>
                    <a asp-action="ProductManagement" class="admin-btn admin-btn-secondary"><i class="fas fa-times me-2"></i>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/validation.js"></script>
}