@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>
    
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage user accounts and admin roles</p>
                    <a asp-action="UserManagement" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Product Management</h5>
                    <p class="card-text">Add, edit, and remove products</p>
                    <a asp-action="ProductManagement" class="btn btn-primary">Manage Products</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Order Management</h5>
                    <p class="card-text">View and process customer orders</p>
                    <a asp-action="OrderManagement" class="btn btn-primary">Manage Orders</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Category Management</h5>
                    <p class="card-text">Manage product categories</p>
                    <a asp-action="CategoryManagement" class="btn btn-primary">Manage Categories</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Orders</h5>
                </div>
                <div class="card-body">
                    <p>View the most recent customer orders here.</p>
                    <a asp-action="OrderManagement" class="btn btn-outline-primary">View All Orders</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Store Statistics</h5>
                </div>
                <div class="card-body">
                    <p>View store statistics and analytics here.</p>
                </div>
            </div>
        </div>
    </div>
</div>